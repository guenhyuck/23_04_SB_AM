<script>
  function toggleTheme() {
    var sunSpan = document.getElementById('sun');
    var moonSpan = document.getElementById('moon');

    if (sunSpan.style.display === 'none') {
      sunSpan.style.display = 'inline';
      moonSpan.style.display = 'none';
    } else {
      sunSpan.style.display = 'none';
      moonSpan.style.display = 'inline';
    }
  }
